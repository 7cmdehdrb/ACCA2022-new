<!-- Controllers launch file

    Load parameters, launch controllers and a robot state publisher.
    Primarily for controllers using ros_control and related frameworks.
 -->
<launch>
    <!-- Load robot description -->
    <include file="$(find erp42_vehicle_description)/launch/erp42_vehicle_description.launch" >
    </include>

    <!-- Load controller parameters -->
    <rosparam command="load" file="$(find erp42_vehicle_gazebo_control)/config/ctrl_ackermann_steering_controller.yaml" />
    <rosparam command="load" file="$(find erp42_vehicle_gazebo_control)/config/ctrl_gains.yaml" />
    <rosparam command="load" file="$(find erp42_vehicle_gazebo_control)/config/ctrl_joint_state_publisher.yaml" />
    <rosparam command="load" file="$(find erp42_vehicle_gazebo_control)/config/ctrl_steer_bot_hardware_gazebo.yaml" />

    <!-- Spawn the controllers -->
    <node pkg="controller_manager" type="spawner" name="base_controller_spawner"
        args="joint_state_publisher " />
   
    <!-- Launch the robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
</launch>
